---
import Layout from "../layouts/Layout.astro";

const tourDates = [
  {
    day: "21",
    month: "march",
    location: "tully's, waterford, waterford, ire",
  },
  {
    day: "28",
    month: "july",
    location: "tully's, waterford, waterford, ire",
  },
  {
    day: "29",
    month: "august",
    location: "tully's, waterford, waterford, ire",
  },
  {
    day: "01",
    month: "december",
    location: "tully's, waterford, waterford, ire",
  },
];

const year = new Date().getFullYear();
---

<Layout title="The Kalimba's">
  <div class="space-y-16 bg-gray-900 text-white">
    <div class="relative z-0">
      <img
        src="../images/hero.jpg"
        alt="cover"
        class="w-screen h-screen object-cover"
      />
    </div>
    <div class="flex flex-col justify-center items-center space-y-16">
      <h2 class="text-4xl font-bold text-center">
        Upcoming <span class="text-red-700">Shows</span>
      </h2>
      <h3 class="text-sm uppercase text-gray-500 tracking-widest">
        Tour Dates {year}
      </h3>
      <ul>
        {
          tourDates.map(({ day, month, location }, idx) => (
            <div
              class={`relative flex flex-col justify-center items-center uppercase px-8 text-center border-t ${
                idx === tourDates.length - 1 && "border-b"
              } border-gray-600 py-16 text-sm`}
            >
              <span>{month}</span>
              <div class="absolute top-1/2 left-1/2 text-9xl -translate-x-1/2 -translate-y-1/2 opacity-20 font-black">
                {day}
              </div>
              <span>{location}</span>
            </div>
          ))
        }
      </ul>
    </div>
    <div class="flex flex-col justify-center items-center space-y-8">
      <h2 class="text-4xl font-bold text-center">
        New <span class="text-red-700">Album Release</span>
      </h2>
      <h3 class="text-sm uppercase text-gray-500 tracking-widest">
        The Dark days are over
      </h3>
      <div class="p-8 flex flex-col justify-center items-center">
        <img src="../images/album.jpg" alt="album cover" />
        <audio controls>
          <source src="../audio/audio1.mp3" type="audio/mpeg" />
          Your browser does not support the audio element
        </audio>
      </div>
    </div>
  </div>
</Layout>

